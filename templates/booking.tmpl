{{ define "booking" }}

<!-- Booking Form -->
  <main class="max-w-4xl mx-auto bg-white p-8 my-10 rounded shadow" x-data="bookingForm()">
    <div class="max-w-6xl mx-auto">
        <h1 class="text-2xl font-bold">Book Your Taniti Experience</h1>
    </div>
    <h2 class="text-xl font-semibold mb-6">Booking Information</h2>

    <form class="space-y-6">
      <!-- Category Dropdown -->
      <div>
        <label class="block mb-1 font-medium">Category</label>
        <select x-model="category" class="w-full border border-gray-300 rounded p-2">
          <option value="">-- Select Category --</option>
          <option value="Transportation">Transportation</option>
          <option value="Accommodation">Accommodation</option>
          <option value="Activity">Activity</option>
        </select>
      </div>

      <!-- Type Dropdown -->
      <div>
        <label class="block mb-1 font-medium">Type</label>
        <select class="w-full border border-gray-300 rounded p-2" :disabled="!category">
          <template x-for="option in options[category] || []" :key="option">
            <option x-text="option"></option>
          </template>
        </select>
      </div>

      <!-- Other Fields -->
      <div>
        <label class="block mb-1 font-medium">Full Name</label>
        <input type="text" class="w-full border border-gray-300 rounded p-2" required>
      </div>

      <div>
        <label class="block mb-1 font-medium">Email Address</label>
        <input type="email" class="w-full border border-gray-300 rounded p-2" required>
      </div>

      <div>
        <label class="block mb-1 font-medium">Address</label>
        <input type="text" class="w-full border border-gray-300 rounded p-2" required>
      </div>

      <div>
        <label class="block mb-1 font-medium">Credit Card</label>
        <input type="text" class="w-full border border-gray-300 rounded p-2" placeholder="1234 5678 9012 3456" required>
      </div>

      <!-- Submit -->
      <div>
        <button type="submit" class="bg-blue-600 text-white px-6 py-2 rounded hover:bg-blue-700">
          Complete Booking
        </button>
      </div>
    </form>
  </main>

{{ end }}
